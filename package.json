{
  "name": "reflect-within",
  "version": "1.0.0",
  "description": "A personal reflection and journaling app with AI-powered insights",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level=moderate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sentry/react": "^9.39.0",
    "@tiptap/extension-link": "^3.0.1",
    "@tiptap/extension-placeholder": "^3.0.1",
    "@tiptap/extension-text-align": "^3.0.1",
    "@tiptap/extension-underline": "^3.0.1",
    "@tiptap/pm": "^3.0.1",
    "@tiptap/react": "^3.0.1",
    "@tiptap/starter-kit": "^3.0.1",
    "axios": "^1.10.0",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.5",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.525.0",
    "openai": "^5.10.1",
    "react": "^18.2.0",
    "react-aria-components": "^1.10.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-speech-recognition": "^4.0.1",
    "react-toastify": "^9.1.3",
    "regenerator-runtime": "^0.14.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^9.0.0",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/runtime": "^7.27.6",
    "@jest/globals": "^30.0.4",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^30.0.4",
    "cssnano": "^7.1.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.24",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.3.2",
    "vite": "^6.3.5",
